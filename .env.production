# Production Environment Configuration for SUMO Traffic Dashboard

# Application Ports
FRONTEND_PORT=80
BACKEND_PORT=3001
PYTHON_BRIDGE_PORT=8814
SUMO_PORT=8813

# Frontend Configuration
FRONTEND_API_BASE_URL=http://localhost:3001/api
FRONTEND_WEBSOCKET_URL=ws://localhost:3001/ws
MAP_DEFAULT_ZOOM=13
MAP_DEFAULT_LAT=9.0331
MAP_DEFAULT_LNG=38.7500
ENABLE_DEBUG_LOGGING=false
MOCK_DATA_MODE=false
ENABLE_EMERGENCY_VEHICLES=true
ENABLE_TRAFFIC_LIGHT_CONTROL=true
ENABLE_ANALYTICS=true

# SUMO Configuration
SUMO_HOST=sumo
SUMO_UPDATE_INTERVAL=1000
MAX_VEHICLES_TRACKED=1000

# Security Configuration
CORS_ORIGINS=http://localhost,http://127.0.0.1

# Logging Configuration
LOG_LEVEL=info

# Optional Services (uncomment to enable)
# REDIS_PORT=6379
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000
# GRAFANA_PASSWORD=your-secure-password-here

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://username:password@host:port/database
# DATABASE_SSL=true

# External Services
# EXTERNAL_SUMO_HOST=your-external-sumo-host
# EXTERNAL_SUMO_PORT=8813

# Monitoring Configuration
# ENABLE_METRICS=true
# METRICS_ENDPOINT=/metrics

# SSL Configuration (for production with reverse proxy)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Load Balancing (if using multiple instances)
# BACKEND_INSTANCES=2
# LOAD_BALANCER_ALGORITHM=round_robin
