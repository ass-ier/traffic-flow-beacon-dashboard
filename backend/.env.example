SUMO_MAX_RECONNECT_ATTEMPTS=5
SUMO_RECONNECT_INTERVAL=5000

# Python Bridge Configuration
PYTHON_BRIDGE_HOST=localhost
PYTHON_BRIDGE_PORT=8814
